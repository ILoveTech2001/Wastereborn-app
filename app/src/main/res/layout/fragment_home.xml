<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- User Initial (top right) -->
    <TextView
        android:id="@+id/user_initial"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/circle_green"
        android:text="A"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:elevation="4dp" />

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back, Recycler! ðŸŒ±"
        android:textSize="18sp"
        android:textColor="#222"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/user_initial"
        android:layout_alignTop="@id/user_initial"
        android:layout_marginEnd="12dp" />

    <!-- Summary Cards Container -->
    <LinearLayout
        android:id="@+id/summary_container"
        android:layout_below="@id/user_initial"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:padding="8dp">

        <!-- Recycled Percentage -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="4dp"
            android:backgroundTint="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/percent_recycled"
                    android:text="0%"
                    android:textSize="22sp"
                    android:textColor="#388E3C"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Recycled"
                    android:textSize="14sp"
                    android:textColor="#666" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Total Orders -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="4dp"
            android:backgroundTint="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/total_orders"
                    android:text="0"
                    android:textSize="22sp"
                    android:textColor="#FB8C00"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Orders"
                    android:textSize="14sp"
                    android:textColor="#666" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Shortcut Cards Container -->
    <LinearLayout
        android:layout_below="@id/summary_container"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Order Pickup Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_order_pickup"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="6dp"
            android:backgroundTint="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_pickup"
                    card_view:tint="#1976D2" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Order a Pickup"
                    android:textSize="18sp"
                    android:textColor="#1976D2"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Visit Store Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_visit_store"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="6dp"
            android:backgroundTint="#FCE4EC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_marketplace"
                    card_view:tint="#C2185B" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Visit Marketplace"
                    android:textSize="18sp"
                    android:textColor="#C2185B"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
